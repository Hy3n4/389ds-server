[General]
FullMachineName = {{ ldap_fqdn }}
SuiteSpotUserID = dirsrv
SuiteSpotGroup = dirsrv
# TODO: StrictHostCheck = false when installing behind a load balancer

[slapd]
ServerPort = 389
ServerIdentifier = {{ serverid }}
Suffix = {{ suffix }}
RootDN = {{ rootdn }}
RootDNPwd = {{ rootdn_password }}
AddOrgEntries = No
AddSampleEntries = No
{% if install_suggest %}
# This creates "common container entries (like ou=People)".
InstallLdifFile = suggest
{% endif %}
{% for file in install_additional_ldif %}
InstallLdifFile = /tmp/{{ file }}
{% endfor %}
